{% extends 'base.html.twig' %}

{% block title %} Page d'accueil {% endblock %}
{% block mytitle %} Voici la liste des animaux {% endblock %}
{% block body %}
    {% for animal in animaux %}
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-sm-2 col-12 text-center"> 
                   <img src="{{asset('images/' ~ animal.image)}}" class="img-fluid">
                </div>
                <div class="col-sm-2 col-12 text-center">
                    <h2><a href="{{path('afficher_animal', {'id' : animal.id })}}">{{ animal.nom }}</a></h2>
                    <div>{{ animal.description }}</div>
                </div>
                <div class="flex text-center col-sm-2 col-12">
                    <a href="" class ="btn btn-primary">{{ animal.famille.libelle }}</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
