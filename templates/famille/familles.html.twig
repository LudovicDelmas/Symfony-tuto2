{% extends 'base.html.twig' %}

{% block title %} Familles {% endblock %}

{% block mytitle %} Pages listant les familles {% endblock %}

{% block body %}
    {% for famille in familles %}
        <h2 class="border-bottom boreder-primary" ><a href="{{path('afficher_famille', {'id':famille.id})}}"> {{ famille.libelle|capitalize }} </a></h2>
        <div> {{ famille.description }} </div>
        <div class="row">
            {% for animal in famille.animaux %}
            <div class="col-6">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6 col-lg-2 text-center"> 
                    <img src="{{asset('images/' ~ animal.image)}}" class="img-fluid">
                    </div>
                    <div class="col align-items-center text-center">
                        <h2><a href="{{path('afficher_animal', {'id' : animal.id })}}">{{ animal.nom }}</a></h2>
                        <div>{{ animal.description }}</div>
                        <div class="align-items-center justify-content-end text-center">
                            <a href="{{path('afficher_famille', {'id':famille.id})}}" class ="btn btn-primary">{{ animal.famille.libelle }}</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
